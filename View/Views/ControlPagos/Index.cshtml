    <h1>
        PAGOS
        <small>MONITOREO</small>
    </h1>
</section>

<!-- Main content -->
<section class="content" style="padding-top:0;padding-bottom:0;">
    <div class="box box-primary" style="margin-bottom:0;">
        <div class="box-body">


            <form id="formFiltroAlertas" class="form-inline">
                <div class="row">
